//Contact
section.contact
    div.container
        div.contact__box-info
            h3.contact__heading Get in touch
            ul.list-links.contact__list-links
                li.list-links__item
                    a.list-links__link(href="https://www.facebook.com/" target="_blank")
                       span.fa.fa-facebook.list-links__ico 
                li.list-links__item
                    a.list-links__link(href="https://twitter.com/" target="_blank")
                       span.fa.fa-twitter.list-links__ico 
                li.list-links__item
                    a.list-links__link(href="https://plus.google.com" target="_blank")
                       span.fa.fa-google-plus.list-links__ico 
                li.list-links__item
                    a.list-links__link(href="https://www.linkedin.com/" target="_blank")
                       span.fa.fa-linkedin.list-links__ico 
            form.form-subscribe.contact__form-subscribe(action="#" method="POST" name="subscribeForm")
                p.form-subscribe__txt Subscribe to our newsletter to stay update with what is new
                input.form-subscribe__field(placeholder="Email Address" name="email" maxlength="25" type="text" value="")
                br
                button.form-subscribe__btn-subscribe(name="send-email" type="submit") Subscribe