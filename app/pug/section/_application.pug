//Application
section.application
    div.container
        div.application__box-info
            h3.application__heading Get Your Free Facebook Analysis Now
            p.application__txt Enter your details below
        form.form.application__form(action="#" method="POST" name="applicationForm")
            a.form__btn-open(href="#")
                span.fa.fa-angle-down.btn-open__ico
            div.form__deco-figure
            a.form__btn-close(href="#")
            p.form__txt Sit down with our experts to receive a free customized marketing plan for your business + Learn How To Use Google and Facebook to get 5000% ROI or more
            input.form__field(placeholder="Your Name" name="name" maxlength="20" type="text" value="")
